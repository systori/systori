{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [

                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": ".",
                },
            ],
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "${input:python_module_name}",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "${input:django_runserver_host_port}",
                "--settings", "${input:django_settings_module}",
                "--noreload",
                "--nothreading",
            ],
            "django": true,
        },
        {
            "name": "Python: Django (Command)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "internalConsole",
            "args": [
                "${input:django_command}",
                "--settings", "${input:django_settings_module}",
            ],
            "django": true,
        },
        {
            "name": "Python: Django test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "internalConsole",
            "args": [
                "test",
                "--settings", "${input:django_settings_module}",
                "${input:python_module_name}",
            ],
            "django": true,
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal",
        }
    ],
    "inputs": [

        {
            "id": "django_command",
            "description": "Enter Django Management Command to debug (e.g. runserver)",
            "type": "promptString",
        },
        {
            "id": "django_runserver_host_port",
            "description": "Enter host:port to bind the server on",
            "type": "promptString",
            "default": "0.0.0.0:8000",
        },
        {
            "id": "django_settings_module",
            "description": "Enter DJANGO_SETTINGS_MODULE to use",
            "type": "promptString",
            "default": "systori.settings.docker_local",
        },
        {
            "id": "python_module_name",
            "description": "Enter python module name",
            "type": "promptString",
        },
    ]
}
