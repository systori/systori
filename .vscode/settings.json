{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
    },
    "files.associations": {
        "**/systori/templates/**/*.html": "django-html",
        "**/systori/templates/**/*": "django-txt",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements",
        "*.pip": "pip-requirements",
        "*.pgsql": "sql",
    },
    "emmet.includeLanguages": {
        "django-html": "html",
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.defaultFormatter": "ms-python.python",
    },
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "/usr/local/bin/pylint",
    "python.linting.pylintArgs": ["--load-plugins", "pylint_django", "--disable=C0111,C0114,C0115,C0116"],
    "python.linting.enabled": true,
    "python.pythonPath": "/usr/local/bin/python",
    "shellformat.effectLanguages": [
        "shellscript",
        "dockerfile",
        "dotenv",
        "hosts",
        "jvmoptions",
        "ignore",
        "gitignore",
        "properties",
        "spring-boot-properties",
        "azcli",
    ],
    "yaml.format.singleQuote": false,
    "python.formatting.provider": "black",
    "python.envFile": "${workspaceFolder}/.env",
    // If IntelliSense is too slow or not showing correct completions enable jedi
    // Disable jedi to use Microsoft Python Analysis Engine
    "python.jediEnabled": true,
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./",
        "-p",
        "test*.py",
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.unittestEnabled": false,
    "python.djangoTestRunner.prefixCommand": "clear && cd /app &&",
    "python.testing.promptToConfigure": false,
}