{
    "name": "systori-web",
    "version": "1.0.0",
    "description": "Systori",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/systori/systori.git"
    },
    "bugs": {
        "url": "https://github.com/systori/systori/issues"
    },
    "homepage": "https://github.com/systori/systori#readme",
    "license": "BSD-3-Clause",
    "engines": {
        "npm": ">= 6.10.3 < 7",
        "node": ">= 10.16.3 < 11"
    },
    "engineStrict": true,
    "dependencies": {
        "@types/natural-sort": "0.0.20",
        "natural-sort": "^1.0.0"
    },
    "devDependencies": {
        "@types/jest": "^24.0.18",
        "@types/node": "^10.0.0",
        "@types/webpack": "^4.39.0",
        "@typescript-eslint/eslint-plugin": "^2.0.0",
        "@typescript-eslint/parser": "^2.0.0",
        "cross-env": "^5.2.0",
        "eslint": "^6.2.1",
        "eslint-config-prettier": "^6.1.0",
        "eslint-plugin-prettier": "^3.1.0",
        "jest": "^24.9.0",
        "prettier": "1.18.2",
        "rollup-plugin-tsc": "^1.1.15",
        "ts-jest": "^24.0.2",
        "ts-loader": "^6.0.4",
        "ts-node": "^8.3.0",
        "tsconfig-paths": "^3.8.0",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "typescript": "^3.5.3",
        "webpack": "^4.39.2",
        "webpack-cli": "^3.3.7"
    },
    "scripts": {
        "tsc": "./node_modules/.bin/tsc",
        "eslint": "./node_modules/.bin/eslint",
        "prettier": "./node_modules/.bin/prettier",
        "webpack": "cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" ./node_modules/.bin/webpack",
        "build": "cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack",
        "lint": "./node_modules/.bin/tsc --pretty -p ./tsconfig.json",
        "test": "jest"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "moduleNameMapper": {
            "^@systori/(.*)$": "<rootDir>/src/$1"
        },
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "**/*.{ts}",
            "!**/node_modules/**"
        ],
        "coverageDirectory": "coverage"
    }
}
